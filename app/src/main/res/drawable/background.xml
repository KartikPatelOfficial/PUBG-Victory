<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

  <item android:drawable="?attr/backgroundColor"/>

  <item
    android:bottom="0dp"
    android:left="100dp"
    android:right="-150dp"
    android:top="100dp">
    <rotate
      android:fromDegrees="-20"
      android:pivotX="0%"
      android:pivotY="100%">
      <shape
        android:shape="oval">
        <solid
          android:color="@color/colorPrimary"/>
      </shape>
    </rotate>
  </item>

</layer-list>